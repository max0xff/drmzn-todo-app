{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom", "esnext", "es2017", "es2018", "webworker"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "ES6",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "types": [
      "node",
      "webpack-env"
    ],
    "moduleResolution": "node",
    "noEmit": false
  },
  "strict-boolean-expressions": true,
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "public",
    "server",
    "sessions",
    "tests-ui",
    "tests"
  ],
  "paths": {
    "src": "src/"
  }
}